<%= image_tag @movie.image %>
<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<p>
  <strong>Category:</strong>
  <%= @movie.category %>
</p>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
<% else %>
<%= link_to 'Back', root_path %>
<% end %>
