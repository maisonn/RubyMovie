<div class="container">

<h1>Movies</h1>

<%= search_form_for @q, url: root_path do |f| %>
<div class="row g-3 align-items-center">
  <div class="col-6">
  <%= f.search_field :title_or_description_cont, class: "form-control", placeholder: "Title or description contain" %>
  </div>
  <div class="col-auto">
  <%= f.submit class: "btn btn-outline-light" %>
  </div>
</div>
<% end %>

<br>

<table class="table table-hover table-secondary">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td class="align-middle"><%= movie.title %></td>
        <td class="align-middle"><%= movie.description %></td>
        <td class="align-middle"><%= movie.rating %></td>
        <td class="align-middle"><%= movie.category %></td>
        <td><%= link_to 'Show', movie, class: "btn btn-outline-info" %>
        <%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-outline-warning" %>
        <%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @movies %>

<br>

<%= link_to 'New Movie', new_movie_path, class: "btn btn-outline-light mt-3" %>
</div>