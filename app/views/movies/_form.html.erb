<%= form_with(model: movie, html: { multipart: true }) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <div class="col-sm-1 col-form-label">
    <%= form.label :image %>
    </div>
    <div class="col-sm-3">
    <%= form.file_field :image, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row mt-3">
    <div class="col-sm-1 col-form-label">
    <%= form.label :title %>
    </div>
    <div class="col-sm-3">
    <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mt-3">
    <div class="col-sm-1 col-form-label">
    <%= form.label :description %>
    </div>
    <div class="col-sm-3">
    <%= form.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mt-3">
    <div class="col-sm-1 col-form-label">
    <%= form.label :rating %>
    </div>
    <div class="col-sm-3">
    <%= form.select :rating, options_for_select(0..10), { :prompt => 'Select Rating(Test)' }, { class: 'form-group', :required => true }  %>
    </div>
  </div>

  <div class="form-group row mt-3">
    <div class="col-sm-1 col-form-label">
    <%= form.label :category_id %>
    </div>
    <div class="col-sm-3">
    <%= form.select(:category_id, options_from_collection_for_select(Category.all, :id, :name), { :prompt => 'Select a Category' }, { class: 'form-control', :required => true }) %>
    </div>
  </div>

  <div class="form-group mt-3">
    <div class="row col-sm-2">
    <%= form.submit class: "btn btn-outline-light" %>
    </div>
  </div>
<% end %>