<div class="container">

<br>

<div class="row justify-content-center">
<% @movies.each do |movie| %>
<div class="col-sm-6 col-md-3">
  <div class="thumbnail" style="width:300px; height:300px; border-radius: 8px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <%= link_to (image_tag movie.image, class: "image", style: "width:300px; height:300px; border-radius: 8px;"), movie %>
  </div>
<table>
  <tbody>
      <tr>
        <td><%= movie.title %></td>
      </tr>
      <tr>
        <td><%= movie.description %></td>
      </tr>
      <tr>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <td><%= movie.category %></td>
      </tr>
  </tbody>
</table>
</div>
<% end %>
</div>
</div>