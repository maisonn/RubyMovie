<div class="container">

<br>

<div class="row justify-content-center">
<% @movies.each do |movie| %>
<div class="col-sm-6 col-md-3">
<table>
  <tbody>
      <tr>
        <td><%= movie.title %></td>
      </tr>
      <tr>
        <td><%= movie.description %></td>
      </tr>
      <tr>
        <td><%= movie.rating %></td>
      </tr>
      <tr>
        <td><%= movie.category %></td>
      </tr>
  </tbody>
</table>
</div>
<% end %>
</div>

</div>