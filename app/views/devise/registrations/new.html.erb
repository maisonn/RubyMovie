<div class="container">
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<form>
  <div class="form-group row">
    <div class="col-sm-1 col-form-label">
    <%= f.label :email %>
    </div>
    <div class="col-sm-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1 col-form-label">
    <%= f.label :password %>
    </div>
    <div class="col-sm-3">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", :required => true %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-1 col-form-label">
    <%= f.label :password_confirmation %>
    </div>
    <div class="col-sm-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", :required => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-outline-success" %>
  </div>
</form>
<% end %>
<p>Or</p>
<%= render "devise/shared/links" %>
</div>